<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane focusTraversable="true"
            prefHeight="500.0" prefWidth="500.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            stylesheets="@../css/style.css">

    <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="Button"/>
    <Button fx:id="setGridButton" layoutX="70.0" layoutY="10.0" mnemonicParsing="false" text="Set Grid"/>
    <TextField fx:id="widthText" text="15" layoutX="135.0" layoutY="10.0" prefHeight="25.0" prefWidth="52.0"
               promptText="Width"/>
    <TextField fx:id="heightText" text="14" layoutX="190.0" layoutY="10.0" prefHeight="25.0" prefWidth="52.0"
               promptText="Height"/>
    <TextField fx:id="gridSizeText" text="30" layoutX="245.0" layoutY="10.0" prefHeight="25.0" prefWidth="59.0"
               promptText="GridSize"/>
    <ScrollPane fx:id="scrollPane"
                AnchorPane.topAnchor="45"
                AnchorPane.leftAnchor="10"
                AnchorPane.rightAnchor="10"
                AnchorPane.bottomAnchor="10"
                fitToWidth="false" fitToHeight="false">
        <Canvas fx:id="canvas2D" height="1" width="1"/>
    </ScrollPane>

</AnchorPane>
